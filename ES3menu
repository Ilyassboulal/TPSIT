<!DOCTYPE html>

<html lang="en">

<head>

  <meta charset="UTF-8">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>

    body {

      font-family: Arial, sans-serif;

      text-align: center;

      margin: 50px;

    }

  </style>

  <title>Contatore e Tabellina</title>

</head>

<body>

  <h1>Contatore e Tabellina</h1>

  <p id="counter">0</p>

  <div id="table"></div>



  <script>

    let counter = 0;



    function updateCounter() {

      document.getElementById('counter').textContent = counter;



      if (counter === 5) {

        printTable();

        clearInterval(interval);

      }



      counter++;

    }



    function printTable() {

      let tableContent = '<h2>Tabellina</h2><ul>';

      

      for (let i = 1; i <= 10; i++) {

        tableContent += `<li>${i}</li>`;

      }



      tableContent += '</ul>';

      document.getElementById('table').innerHTML = tableContent;

    }



    const interval = setInterval(updateCounter, 1000);

  </script>

</body>

</html>
